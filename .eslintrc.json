{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "Feature": "readonly",
    "Scenario": "readonly",
    "Before": "readonly",
    "locate": "readonly"
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 15,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-expressions": "error",
    "quotes": ["error", "single"],
    "import/no-extraneous-dependencies": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-restricted-globals": 0,
    "linebreak-style": 0,
    "no-prototype-builtins": 0,
    "consistent-return": 0,
    "max-len": "off",
    "import/prefer-default-export": "off",
    "no-await-in-loop": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never"
      }
    ],
    "class-methods-use-this": 0,
    "no-plusplus": 0
  }
}
